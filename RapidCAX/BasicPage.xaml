<UserControl x:Class="RapidCAX.BasicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RapidCAX"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
    >

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                <Label Content="Name:" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Center" Width="80"/>
                <TextBox Width="150" Height="25" Text="{Binding ElementName}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                <Label Content="Schema:" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Center" Width="80"/>
                <TextBox Width="150" Height="25" Text="{Binding ElementSchemaName,Mode=OneWay}" IsEnabled="False" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
